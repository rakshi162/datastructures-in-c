#include <stdio.h>
#include <stdlib.h>
int main()
{
int n, *arr;
printf("Enter number of elements: ");
scanf("%d", &n);
// allocate and initialize memory
arr = (int*) calloc(n, sizeof(int));
if (arr == NULL) 
{
        printf("Memory allocation failed!\n");
        return 1;
}
// print initial values (all 0)
printf("Initial array values: ");
for (int i = 0; i < n; i++) 
{
        printf("%d ", arr[i]);
}
free(arr);
return 0;
}
